{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "baseUrl": "./",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": ["node_modules", "test", "tests", "__tests__"]
}
